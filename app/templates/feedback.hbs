<div class="row">
    <div class="small-12 medium-8 medium-centered large-6 large-centered columns">
        <h1>Your Feedback Is Important!</h1>

        <p>Please take a second and fill the form below. With your opinion we can make Codepot better.</p>

        {{#if parsedWorkshops}}
            <h2>Workshops You Have Attended:</h2>
            {{#each workshop in parsedWorkshops}}
                {{star-rating-with-comment-widget question=workshop.title questionId='workshop_rating' userId=userId userToken=userToken workshopId=workshop.id}}

                {{#each mentor in workshop.mentors}}
                    {{star-rating-with-comment-widget question=mentor.name questionId='mentor_rating' userId=userId userToken=userToken mentorId=mentor.id}}
                {{/each}}
            {{/each}}
        {{/if}}

        {{#if isMentor}}
            <h2>Your Workshop</h2>
            {{star-rating-with-comment-widget question='Workshop Equipment Rating:' questionId='mentor_room_opinion' userId=userId userToken=userToken}}

            {{star-rating-with-comment-widget question='Organizers/Volunteers Support Rating:' questionId='mentor_orginizers_support_opinion' userId=userId userToken=userToken}}
        {{/if}}

        <h2>General</h2>

        {{input-rating-widget question='Years Of Your Professional Experience:' placeholder='Years of experience (e.g. 0, 1, 5, ...).' questionId='experience' userId=userId userToken=userToken}}

        {{star-rating-with-comment-widget question='Venue Rating:' questionId='swps_rating' userId=userId userToken=userToken}}

        {{star-rating-with-comment-widget question='Afterparty Rating:' questionId='afterparty_rating' userId=userId userToken=userToken}}

        {{star-rating-with-comment-widget question='Lunch Rating:' questionId='lunch_rating' userId=userId userToken=userToken}}

        {{star-rating-with-comment-widget question='Huntly Game Rating:' questionId='huntly_rating' userId=userId userToken=userToken}}

        {{star-rating-with-comment-widget question='Registration System Rating:' questionId='registration_rating' userId=userId userToken=userToken}}

        {{star-rating-with-comment-widget question='Overall Codepot Rating:' questionId='general_rating' userId=userId userToken=userToken}}

        {{star-rating-with-comment-widget question='Internet Connection Rating:' questionId='internet_rating' userId=userId userToken=userToken}}
    </div>
</div>


