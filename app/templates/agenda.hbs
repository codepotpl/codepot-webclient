<section id="agenda">
    <div class="row">
        <div class="columns">
            <h1>Agenda</h1>

            <div class="search-bar">
                {{input value=searchText placeholder='What are you looking for?'}}
                <button {{action 'filterWorkshops'}}>
                    <div class="flex"><i class="fa fa-search"></i></div>
                </button>
            </div>

            <h2>Day 1</h2>

            <h3>Friday 28th August</h3>

            <div {{bind-attr class=':no-workshops-found noWorkshopsFoundDay1::hidden'}}>
                No workshops found for this day.
            </div>

            <button {{bind-attr class=':event filteredWorkshopsOnly:hidden'}} disabled>
                <div class="flex">
                    <h1><i class="fa fa-angle-down"></i> Registration</h1>
                    <span>08:00-09:00</span>
                </div>
            </button>

            <button {{bind-attr class=':event filteredWorkshopsOnly:hidden'}} disabled>
                <div class="flex">
                    <h1><i class="fa fa-angle-down"></i> Opening</h1>
                    <span>09:00-09:15</span>
                </div>
            </button>

            {{agenda-workshops-section allWorkshops=workshops day='FIRST' timeSlot=0 name='Workshops I' time='09:15-12:30' parentController=this}}

            <button {{bind-attr class=':event filteredWorkshopsOnly:hidden'}} disabled>
                <div class="flex">
                    <h1><i class="fa fa-angle-down"></i> Coffee Break</h1>
                    <span>12:30-12:45</span>
                </div>
            </button>

            {{agenda-workshops-section allWorkshops=workshops day='FIRST' timeSlot=1 name='Workshops II / Lunch' time='12:45-13:45' parentController=this}}

            {{agenda-workshops-section allWorkshops=workshops day='FIRST' timeSlot=2 name='Workshops III / Lunch' time='13:45-14:45' parentController=this}}

            <button {{bind-attr class=':event filteredWorkshopsOnly:hidden'}} disabled>
                <div class="flex">
                    <h1><i class="fa fa-angle-down"></i> Coffee Break</h1>
                    <span>14:45-15:00</span>
                </div>
            </button>

            {{agenda-workshops-section allWorkshops=workshops day='FIRST' timeSlot=3 name='Workshops IV' time='15:00-18:15' parentController=this}}

            <h2>Day 2</h2>

            <h3>Saturday 29th August</h3>

            <div {{bind-attr class=':no-workshops-found noWorkshopsFoundDay2::hidden'}}>
                No workshops found for this day.
            </div>

            <button {{bind-attr class=':event filteredWorkshopsOnly:hidden'}} disabled>
                <div class="flex">
                    <h1><i class="fa fa-angle-down"></i> Registration</h1>
                    <span>09:00-09:30</span>
                </div>
            </button>

            {{agenda-workshops-section allWorkshops=workshops  day='SECOND' timeSlot=0 name='Workshops I' time='09:30-12:45' parentController=this}}

            <button {{bind-attr class=':event filteredWorkshopsOnly:hidden'}} disabled>
                <div class="flex">
                    <h1><i class="fa fa-angle-down"></i> Coffee Break</h1>
                    <span>12:45-13:00</span>
                </div>
            </button>

            {{agenda-workshops-section allWorkshops=workshops day='SECOND' timeSlot=1 name='Workshops II / Lunch' time='13:00-14:00' parentController=this}}

            {{agenda-workshops-section allWorkshops=workshops day='SECOND' timeSlot=2 name='Workshops III / Lunch' time='14:00-15:00' parentController=this}}

            <button {{bind-attr class=':event filteredWorkshopsOnly:hidden'}} disabled>
                <div class="flex">
                    <h1><i class="fa fa-angle-down"></i> Coffee Break</h1>
                    <span>15:00-15:15</span>
                </div>
            </button>

            {{agenda-workshops-section allWorkshops=workshops day='SECOND' timeSlot=3 name='Workshops IV' time='15:15-18:30' parentController=this}}
        </div>
    </div>
</section>


